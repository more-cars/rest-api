{
  "openapi": "3.1.0",
  "info": {
    "title": "More Cars - REST API Specification",
    "description": "OpenAPI specification for the More Cars API",
    "version": "0.4.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local"
    },
    {
      "url": "http://10.104.56.60/",
      "description": "Local Minikube"
    },
    {
      "url": "https://more-cars.net/api/v2/",
      "description": "Production"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "OpenAPI specification",
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "summary": "Health check",
        "responses": {
          "200": {
            "description": "Healthy",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/car-models/{car-model-id}": {
      "get": {
        "summary": "Get `Car Model` by ID",
        "parameters": [
          {
            "in": "path",
            "name": "car-model-id",
            "description": "ID of the `Car Model`",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Requested `Car Model` was found.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CarModel"
                }
              }
            }
          },
          "404": {
            "description": "No `Car Model` with the provided ID found.",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/car-models": {
      "get": {
        "summary": "Returns a list of all `Car Model`s",
        "responses": {
          "200": {
            "description": "A list of all `Car Model`s.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CarModel"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create `Car Model`",
        "responses": {
          "201": {
            "description": "`Car Model` created.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CarModel"
                }
              }
            }
          },
          "422": {
            "description": "Invalid request.",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CarModel": {
        "type": "object",
        "required": [
          "name"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "readOnly": true
          },
          "name": {
            "type": "string"
          }
        }
      }
    }
  }
}
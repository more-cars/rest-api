meta {
  name: Get all ›hosted-racing-event‹ relations (valid data)
  type: http
  tags: [
    get
    relation
    collection
    valid
  ]
}

get {
  url: {{baseUrl}}/race-tracks/{{validRaceTrackId}}/hosted-racing-event
  body: none
  auth: none
}

assert {
  res.status: 200
  res.body: isJson
  res.body.data: isArray
  res.body.data[0].data: isJson
  res.body.data[0].data.relationship_id: gte 12000000
  res.body.data[0].data.relationship_name: hosted-racing-event
  res.body.data[0].data.relationship_partner: isJson
  res.body.data[0].data.relationship_partner.node_type: racing-event
  res.body.data[0].data.relationship_partner.data.id: gte 12000000
  res.body.data[0].data.created_at: isString
  res.body.data[0].data.updated_at: isString
}

script:pre-request {
  const lib = require ('./lib/lib')
  await lib.RaceTracks.ensureValidRaceTrackExists()
  await lib.RacingEvents.ensureValidRacingEventExists()
  await lib.RaceTracks.ensureRaceTrackHostedRacingEventRelationshipExists(bru.getEnvVar('validRaceTrackId'), bru.getEnvVar('validRacingEventId'))
}

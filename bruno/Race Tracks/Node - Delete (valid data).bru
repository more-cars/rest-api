meta {
  name: Delete Race Track (valid data)
  type: http
  tags: [
    delete
    node
    valid
  ]
}

delete {
  url: {{baseUrl}}/race-tracks/{{validRaceTrackId}}
  body: none
  auth: none
}

assert {
  res.status: 204
  res.body: isEmpty
}

script:pre-request {
  const lib = require ('./lib/lib')
  await lib.RaceTracks.ensureValidRaceTrackExists()
}

script:post-response {
  bru.setEnvVar("validRaceTrackId", null)
}

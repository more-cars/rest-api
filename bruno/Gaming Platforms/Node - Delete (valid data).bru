meta {
  name: Delete Gaming Platform (valid data)
  type: http
  tags: [
    delete
    node
    valid
  ]
}

delete {
  url: {{baseUrl}}/gaming-platforms/{{validGamingPlatformId}}
  body: none
  auth: none
}

assert {
  res.status: 204
  res.body: isEmpty
}

script:pre-request {
  await lib.GamingPlatforms.ensureValidGamingPlatformExists()
}

script:post-response {
  bru.setEnvVar("validGamingPlatformId", null)
}

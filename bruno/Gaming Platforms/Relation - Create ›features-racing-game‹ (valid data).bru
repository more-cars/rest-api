meta {
  name: Create ›features-racing-game‹ relation (valid data)
  type: http
  tags: [
    create
    relation
    valid
  ]
}

post {
  url: {{baseUrl}}/gaming-platforms/{{validGamingPlatformId}}/features-racing-game/{{validRacingGameId}}
  body: none
  auth: none
}

assert {
  res.status: 201
  res.body: isJson
  res.body.data.relationship_id: gte 12000000
  res.body.data.relationship_name: features-racing-game
  res.body.data.relationship_partner: isJson
  res.body.data.relationship_partner.node_type: racing-game
  res.body.data.relationship_partner.data.id: {{validRacingGameId}}
  res.body.data.created_at: isString
  res.body.data.updated_at: isString
}

script:pre-request {
  await lib.GamingPlatforms.ensureValidGamingPlatformExists()
  await lib.RacingGames.ensureValidRacingGameExists()
}

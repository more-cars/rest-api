meta {
  name: Get Gaming Platform by ID (valid data)
  type: http
  tags: [
    get
    node
    valid
  ]
}

get {
  url: {{baseUrl}}/gaming-platforms/{{validGamingPlatformId}}
  body: none
  auth: none
}

assert {
  res.status: 200
  res.body: isJson
  res.body.data.id: {{validGamingPlatformId}}
  res.body.data.created_at: isNotEmpty
  res.body.data.updated_at: isNotEmpty
}

script:pre-request {
  await lib.GamingPlatforms.ensureValidGamingPlatformExists()
}

meta {
  name: Get relation by ID (valid data)
  type: http
}

get {
  url: {{baseUrl}}/relationships/{{validRelationshipId}}
  body: none
  auth: none
}

assert {
  res.status: 200
  res.body: isJson
  res.body.data.relationship_id: gte 12000000
  res.body.data.relationship_name: isString
  res.body.data.relationship_partner: isJson
  res.body.data.relationship_partner.node_type: isString
  res.body.data.relationship_partner.data.id: gte 12000000
  res.body.data.created_at: isString
  res.body.data.updated_at: isString
}

script:pre-request {
  await lib.Relationships.ensureValidRelationshipExists()
}

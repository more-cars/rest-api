meta {
  name: Delete ›is-followed-by-event‹ relation (valid data)
  type: http
  tags: [
    delete
    relation
    valid
  ]
}

delete {
  url: {{baseUrl}}/racing-events/{{validRacingEventId}}/is-followed-by-event/{{validSecondRacingEventId}}
  body: none
  auth: none
}

assert {
  res.status: 204
}

script:pre-request {
  const lib = require ('./lib/lib')
  await lib.RacingEvents.ensureValidRacingEventExists()
  await lib.RacingEvents.ensureValidSecondRacingEventExists()
  await lib.RacingEvents.ensureRacingEventIsFollowedByEventRelationshipExists(bru.getEnvVar('validRacingEventId'), bru.getEnvVar('validSecondRacingEventId'))
}

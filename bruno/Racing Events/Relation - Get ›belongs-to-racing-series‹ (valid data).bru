meta {
  name: Get ›belongs-to-racing-series‹ relation (valid data)
  type: http
  tags: [
    get
    relation
    valid
  ]
}

get {
  url: {{baseUrl}}/racing-events/{{validRacingEventId}}/belongs-to-racing-series
  body: none
  auth: none
}

assert {
  res.status: 200
  res.body: isJson
  res.body.data.relationship_id: gte 12000000
  res.body.data.relationship_name: belongs-to-racing-series
  res.body.data.relationship_partner: isJson
  res.body.data.relationship_partner.node_type: racing-series
  res.body.data.relationship_partner.data.id: gte 12000000
  res.body.data.created_at: isString
  res.body.data.updated_at: isString
}

script:pre-request {
  const lib = require ('./lib/lib')
  await lib.RacingEvents.ensureValidRacingEventExists()
  await lib.RacingSeries.ensureValidRacingSeriesExists()
  await lib.RacingEvents.ensureRacingEventBelongsToRacingSeriesRelationshipExists(bru.getEnvVar('validRacingEventId'), bru.getEnvVar('validRacingSeriesId'))
}

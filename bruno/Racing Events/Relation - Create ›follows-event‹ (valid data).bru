meta {
  name: Create ›follows-event‹ relation (valid data)
  type: http
  tags: [
    create
    relation
    valid
  ]
}

post {
  url: {{baseUrl}}/racing-events/{{validRacingEventId}}/follows-event/{{validSecondRacingEventId}}
  body: none
  auth: none
}

assert {
  res.status: 201
  res.body: isJson
  res.body.data.relationship_id: gte 12000000
  res.body.data.relationship_name: follows-event
  res.body.data.relationship_partner: isJson
  res.body.data.relationship_partner.node_type: racing-event
  res.body.data.relationship_partner.data.id: {{validSecondRacingEventId}}
  res.body.data.created_at: isString
  res.body.data.updated_at: isString
}

script:pre-request {
  await lib.RacingEvents.ensureValidRacingEventExists()
  await lib.RacingEvents.ensureValidSecondRacingEventExists()
}

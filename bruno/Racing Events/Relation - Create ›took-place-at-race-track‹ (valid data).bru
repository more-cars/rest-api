meta {
  name: Create ›took-place-at-race-track‹ relation (valid data)
  type: http
  tags: [
    create
    relation
    valid
  ]
}

post {
  url: {{baseUrl}}/racing-events/{{validRacingEventId}}/took-place-at-race-track/{{validRaceTrackId}}
  body: none
  auth: none
}

assert {
  res.status: 201
  res.body: isJson
  res.body.data.relationship_id: gte 12000000
  res.body.data.relationship_name: took-place-at-race-track
  res.body.data.relationship_partner: isJson
  res.body.data.relationship_partner.node_type: race-track
  res.body.data.relationship_partner.data.id: {{validRaceTrackId}}
  res.body.data.created_at: isString
  res.body.data.updated_at: isString
}

script:pre-request {
  const lib = require ('./lib/lib')
  await lib.RacingEvents.ensureValidRacingEventExists()
  await lib.RaceTracks.ensureValidRaceTrackExists()
}

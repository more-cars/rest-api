meta {
  name: Create ›belongs-to-racing-series‹ relation (valid data)
  type: http
  tags: [
    create
    relation
    valid
  ]
}

post {
  url: {{baseUrl}}/racing-events/{{validRacingEventId}}/belongs-to-racing-series/{{validRacingSeriesId}}
  body: none
  auth: none
}

assert {
  res.status: 201
  res.body: isJson
  res.body.data.relationship_id: gte 12000000
  res.body.data.relationship_name: belongs-to-racing-series
  res.body.data.relationship_partner: isJson
  res.body.data.relationship_partner.node_type: racing-series
  res.body.data.relationship_partner.data.id: {{validRacingSeriesId}}
  res.body.data.created_at: isString
  res.body.data.updated_at: isString
}

script:pre-request {
  await lib.RacingEvents.ensureValidRacingEventExists()
  await lib.RacingSeries.ensureValidRacingSeriesExists()
}

meta {
  name: Delete ›follows-event‹ relation (valid data)
  type: http
  tags: [
    delete
    relation
    valid
  ]
}

delete {
  url: {{baseUrl}}/racing-events/{{validRacingEventId}}/follows-event/{{validSecondRacingEventId}}
  body: none
  auth: none
}

assert {
  res.status: 204
}

script:pre-request {
  const lib = require ('./lib/lib')
  await lib.RacingEvents.ensureValidRacingEventExists()
  await lib.RacingEvents.ensureValidRacingEventExists()
  await lib.RacingEvents.ensureRacingEventFollowsEventRelationshipExists(bru.getEnvVar('validRacingEventId'), bru.getEnvVar('validSecondRacingEventId'))
}

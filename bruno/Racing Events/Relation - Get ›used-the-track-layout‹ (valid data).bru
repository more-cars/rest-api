meta {
  name: Get ›used-the-track-layout‹ relation (valid data)
  type: http
  tags: [
    get
    relation
    valid
  ]
}

get {
  url: {{baseUrl}}/racing-events/{{validRacingEventId}}/used-the-track-layout
  body: none
  auth: none
}

assert {
  res.status: 200
  res.body: isJson
  res.body.data.relationship_id: gte 12000000
  res.body.data.relationship_name: used-the-track-layout
  res.body.data.relationship_partner: isJson
  res.body.data.relationship_partner.node_type: track-layout
  res.body.data.relationship_partner.data.id: gte 12000000
  res.body.data.created_at: isString
  res.body.data.updated_at: isString
}

script:pre-request {
  const lib = require ('./lib/lib')
  await lib.RacingEvents.ensureValidRacingEventExists()
  await lib.TrackLayouts.ensureValidTrackLayoutExists()
  await lib.RacingEvents.ensureRacingEventUsedTheTrackLayoutRelationshipExists(bru.getEnvVar('validRacingEventId'), bru.getEnvVar('validTrackLayoutId'))
}

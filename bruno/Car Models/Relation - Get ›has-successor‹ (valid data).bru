meta {
  name: Get ›has-successor‹ relation (valid data)
  type: http
  tags: [
    get
    relation
    valid
  ]
}

get {
  url: {{baseUrl}}/car-models/{{validCarModelId}}/has-successor
  body: none
  auth: none
}

assert {
  res.status: 200
  res.body: isJson
  res.body.data.relationship_id: gte 12000000
  res.body.data.relationship_name: has-successor
  res.body.data.relationship_partner: isJson
  res.body.data.relationship_partner.node_type: car-model
  res.body.data.relationship_partner.data.id: gte 12000000
  res.body.data.created_at: isString
  res.body.data.updated_at: isString
}

script:pre-request {
  const lib = require ('./lib/lib')
  await lib.CarModels.ensureValidCarModelExists()
  await lib.CarModels.ensureValidSecondCarModelExists()
  await lib.CarModels.ensureCarModelHasSuccessorRelationshipExists(bru.getEnvVar('validCarModelId'), bru.getEnvVar('validSecondCarModelId'))
}

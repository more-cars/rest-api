meta {
  name: Get all Car Models (valid sort)
  type: http
  tags: [
    get
    node
    collection
    sorting
    valid
  ]
}

get {
  url: {{baseUrl}}/car-models?sort_by_property=name&sort_direction=desc
  body: none
  auth: none
}

assert {
  res.status: 200
  res.body.data: isArray
  res.body.data[0].data: isJson
  res.body.data[0].data.id: gte 12000000
}

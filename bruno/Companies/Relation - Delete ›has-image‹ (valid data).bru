meta {
  name: Delete ›has-image‹ relation (valid data)
  type: http
  tags: [
    delete
    relation
    valid
  ]
}

delete {
  url: {{baseUrl}}/companies/{{validCompanyId}}/has-image/{{validImageId}}
  body: none
  auth: none
}

assert {
  res.status: 204
}

script:pre-request {
  const lib = require ('./lib/lib')
  await lib.Companies.ensureValidCompanyExists()
  await lib.Images.ensureValidImageExists()
  await lib.Companies.ensureCompanyHasImageRelationshipExists(bru.getEnvVar('validCompanyId'), bru.getEnvVar('validImageId'))
}

meta {
  name: Delete Company (valid data)
  type: http
  tags: [
    delete
    node
    valid
  ]
}

delete {
  url: {{baseUrl}}/companies/{{validCompanyId}}
  body: none
  auth: none
}

assert {
  res.status: 204
  res.body: isEmpty
}

script:pre-request {
  const lib = require ('./lib/lib')
  await lib.Companies.ensureValidCompanyExists()
}

script:post-response {
  bru.setEnvVar("validCompanyId", null)
}

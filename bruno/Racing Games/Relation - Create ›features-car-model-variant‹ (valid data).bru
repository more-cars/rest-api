meta {
  name: Create ›features-car-model-variant‹ relation (valid data)
  type: http
  tags: [
    create
    relation
    valid
  ]
}

post {
  url: {{baseUrl}}/racing-games/{{validRacingGameId}}/features-car-model-variant/{{validCarModelVariantId}}
  body: none
  auth: none
}

assert {
  res.status: 201
  res.body: isJson
  res.body.data.relationship_id: gte 12000000
  res.body.data.relationship_name: features-car-model-variant
  res.body.data.relationship_partner: isJson
  res.body.data.relationship_partner.node_type: car-model-variant
  res.body.data.relationship_partner.data.id: {{validCarModelVariantId}}
  res.body.data.created_at: isString
  res.body.data.updated_at: isString
}

script:pre-request {
  await lib.RacingGames.ensureValidRacingGameExists()
  await lib.CarModelVariants.ensureValidCarModelVariantExists()
}

meta {
  name: Create Brand (valid data)
  type: http
  tags: [
    create
    node
    valid
  ]
}

post {
  url: {{baseUrl}}/brands
  body: json
  auth: none
}

body:json {
  {
    "name": "DKW",
    "full_name": "Dampfkraftwagen",
    "founded": 1916,
    "defunct": 1966,
    "wmi": null,
    "hsn": "0010"
  }
}

assert {
  res.status: 201
  res.body: isJson
  res.body.data.id: gte 12000000
}

tests {
  test("both timestamps should be identical", function () {
    const data = res.getBody()
    expect(data.data.created_at).to.eql(data.data.updated_at)
  })
}

meta {
  name: Delete ›has-lap-time‹ relation (valid data)
  type: http
  tags: [
    delete
    relation
    valid
  ]
}

delete {
  url: {{baseUrl}}/track-layouts/{{validTrackLayoutId}}/has-lap-time/{{validLapTimeId}}
  body: none
  auth: none
}

assert {
  res.status: 204
}

script:pre-request {
  const lib = require ('./lib/lib')
  await lib.TrackLayouts.ensureValidTrackLayoutExists()
  await lib.LapTimes.ensureValidLapTimeExists()
  await lib.TrackLayouts.ensureTrackLayoutHasLapTimeRelationshipExists(bru.getEnvVar('validTrackLayoutId'), bru.getEnvVar('validLapTimeId'))
}

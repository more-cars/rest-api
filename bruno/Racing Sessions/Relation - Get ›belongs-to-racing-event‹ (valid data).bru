meta {
  name: Get ›belongs-to-racing-event‹ relation (valid data)
  type: http
  tags: [
    get
    relation
    valid
  ]
}

get {
  url: {{baseUrl}}/racing-sessions/{{validRacingSessionId}}/belongs-to-racing-event
  body: none
  auth: none
}

assert {
  res.status: 200
  res.body: isJson
  res.body.data.relationship_id: gte 12000000
  res.body.data.relationship_name: belongs-to-racing-event
  res.body.data.relationship_partner: isJson
  res.body.data.relationship_partner.node_type: racing-event
  res.body.data.relationship_partner.data.id: gte 12000000
  res.body.data.created_at: isString
  res.body.data.updated_at: isString
}

script:pre-request {
  const lib = require ('./lib/lib')
  await lib.RacingSessions.ensureValidRacingSessionExists()
  await lib.RacingEvents.ensureValidRacingEventExists()
  await lib.RacingSessions.ensureRacingSessionBelongsToRacingEventRelationshipExists(bru.getEnvVar('validRacingSessionId'), bru.getEnvVar('validRacingEventId'))
}
